<?xml version="1.0" encoding="UTF-8"?>

<beans  xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<!-- Person person = new Person(); -->
<bean id="person" class="com.Person" autowire="byName">

<property name="age" value="12"></property>
<property name="name" value="Apple"></property>
<property name="id" value="9"></property>
<property name="address" value="hyderbad"></property>



</bean>


<bean id="person1" class="com.Person">

<constructor-arg name="age" value="20"></constructor-arg>
<constructor-arg name="name" value="Rose"></constructor-arg>
<constructor-arg name="id" value="1"></constructor-arg>
<constructor-arg name="address" value="chennai"></constructor-arg>



</bean>
</beans>